  <style>
    #suggestions {
      left: 110px;
      width: 600px;
      max-height: 618px;
      transform: translate(0, 8px);
      resize: vertical;
      padding-top: 5px;
      background-color: rgba(23, 23, 23, 0.965);
      -webkit-backdrop-filter: blur(8px);
      backdrop-filter: blur(8px);
