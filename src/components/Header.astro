  transition: all 0.2s ease-out;
}

.fade-move {
  transform: rotate(50deg);
  opacity: 0;
}

.fade-out {
  opacity: 0;
}

    .background-fade {
      width: 100%;
      height: 100%;
      background-color: #00000090;
      backdrop-filter: grayscale(0.5) blur(8px);
      -webkit-backdrop-filter: grayscale(0.5) blur(8px);
      z-index: 1000000;
      position: fixed;
