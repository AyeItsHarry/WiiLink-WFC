<script is:inline type="module" src="/js/options_panel.js"></script>

<div class="background-fade" id="backblur">
  <div class="customization-container" id="customization">
    <div style="display:flex; justify-content:space-between; align-items:center; height:50px; padding-top:20px; padding-left:20px; padding-right:20px;">
      <div style="font-size:30px; color:white; font-family:system-ui; font-weight:600;">Customization</div>
      <button type="button" class="btn btn-danger" onclick="closeCustomization();">Close</button>
  </div>

  <fieldset style="color:white;">
    <legend>Display mode:</legend>
  
    <div>
      <input type="radio" id="huey" name="display" value="complete" checked />
      <label for="huey">Complete</label>
    </div>
  
    <div>
      <input type="radio" id="dewey" name="display" value="compact" />
      <label for="dewey">Compact</label>
    </div>
  
    <div>
      <input type="radio" id="louie" name="display" value="utilitarian" />
      <label for="louie">Utilitarian</label>
    </div>
  </fieldset>

  <fieldset style="color:white;">
    <legend>Online stats:</legend>
  
    <div>
      <input type="radio" id="huey" name="statistics" value="big" checked />
      <label for="huey">Big</label>
    </div>
  
    <div>
      <input type="radio" id="dewey" name="statistics" value="small" />
      <label for="dewey">Small</label>
    </div>
    </fieldset>

    <fieldset style="color:white;">
      <legend>Theme:</legend>
    
      <div>
        <input type="radio" id="huey" name="theme" value="dark" checked />
        <label for="huey">Dark</label>
      </div>
    
      <div>
        <input type="radio" id="dewey" name="theme" value="light" />
        <label for="dewey">Light</label>
      </div>
    
      <div>
        <input type="radio" id="louie" name="theme" value="midnight" />
        <label for="louie">Midnight</label>
      </div>
    </fieldset>

    <button type="button" class="btn btn-success" onclick="saveSelections();">Save</button>

</div>
</div>

<script is:inline>

window.saveSelections = function() {
  var displayMode = document.querySelector('input[name="display"]:checked').value;
  var theme = document.querySelector('input[name="theme"]:checked').value;
  var statistics = document.querySelector('input[name="statistics"]:checked').value;

  localStorage.setItem('displayMode', displayMode);
  localStorage.setItem('statistics', statistics);
  localStorage.setItem('theme', theme);

  console.log(displayMode, theme, statistics);
}
</script>

<div
