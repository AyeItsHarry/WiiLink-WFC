<!-- subpage.astro -->
---
import { loadSubpageData } from '../components/loadSubpageData.astro'
---

<template>
  <h1>{title}</h1>
  <p>{content}</p>
</template>

<static>
  { 
    const subpageData = loadSubpageData()
    return subpageData.map((subpage) => ({
      path: `/subpages/${subpage.title.toLowerCase().replace(/\s/g, '-')}`,
      data: subpage
    }))
  }
</static>
